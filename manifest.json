{
    "manifest_version": 2,
    "name": "Window Manager",
    "description": "This extension shows a Hello World message!",
    "version": "1.0",
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "images/icon.png"
    },
    "permissions": ["tabs", "storage", "unlimitedStorage"],
    "background": {
        "scripts": ["js/background.js"],
        "persistent": false
    }

}
